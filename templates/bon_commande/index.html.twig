{% include 'header_finance.html.twig' %}

{% block title %}Fournisseur{% endblock %}
<div class="content-wrapper" style="min-height: 1302.4px;">

<section class="content">
<div class="container-fluid">
<div class="row">
<div class="col-md-9">
<div class="card">
<div class="card-header">
    <h1>Liste des fournisseurs</h1>
</div>
{% block body %}

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Bon Commande</th>
                <th>Fournisseur</th>
                <th>Date d'envoie</th>
                <th>Date de livraison</th>
                <th>PDF</th>

                {# <th colspan="3" style="text-align:center">Actions</th> #}
            </tr>
        </thead>
        <tbody>
        {% for bonCommande in bonCommandes %}
            <tr>
                <td>{{ bonCommande.getId() }}</td>
                <td>{{ bonCommande.getFournisseur().getDesFournisseur() }}</td>
                <td>{{ bonCommande.getDateEnvoi()|date('Y-m-d')  }}</td>
                <td>{{ bonCommande.getDateLivraison()|date('Y-m-d')  }}</td>
               <td style="text-align:center">
                    <a href="{{ path('app_bon_commande_pdf', {'id': bonCommande.getId()}) }}"><button class="btn btn-info">Voir</button></a>
                </td>
                {#  <td style="text-align:center">
                    <a href="{{ path('app_fournisseur_show', {'id': fournisseur.getId()}) }}"><button class="btn btn-success"><i class="nav-icon fas fa-file"></i></button></a>
                </td>
                <td style="text-align:center">
                    <a href="{{ path('app_fournisseur_edit', {'id': fournisseur.getId()}) }}"><button class="btn btn-warning"><i class="nav-icon fas fa-edit"></i></button></a>
                </td> #}
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_fournisseur_new') }}"><button class="btn btn-primary">Create new</button></a>
{% endblock %}

</div>
</div>
</div>
</div>
</section>
</div>

