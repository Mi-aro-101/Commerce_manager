{% include 'header_achat.html.twig' %}

{% block title %}Mode de paiment{% endblock %}
<div class="content-wrapper" style="min-height: 1302.4px;">

<section class="content">
<div class="container-fluid">
<div class="row">
<div class="col-md-9">
<div class="card">
<div class="card-header">
    <h1>Liste des modes de paiment disponibles</h1>
</div>
{% block body %}

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Des_adresse</th>
                <th colspan="2" style="text-align:center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mode_paiment in mode_paiments %}
            <tr>
                <td>{{ mode_paiment.getDesModePaiment() }}</td>
                <td style="text-align:center">
                    <a href="{{ path('app_mode_paiment_show', {'id': mode_paiment.getId()}) }}"><button class="btn btn-success"><i class="nav-icon fas fa-file"></i></button></a>
                </td>
                <td style="text-align:center">
                    <a href="{{ path('app_mode_paiment_edit', {'id': mode_paiment.getId()}) }}"><button class="btn btn-warning"><i class="nav-icon fas fa-edit"></i></button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_mode_paiment_new') }}"><button class="btn btn-info">Create new</button></a>
{% endblock %}

</div>
</div>
</div>
</div>
</section>
</div>

{% include 'footer_template.html.twig' %}
